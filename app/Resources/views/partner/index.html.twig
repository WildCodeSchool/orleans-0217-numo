{% extends 'layoutadmin.html.twig' %}

{% block body %}
<div class="container font-lato">
    <h1 class="titreadmin font-lato">PARTENAIRES</h1>
    <table>
        <thead>
        <tr class="text-center">
            <th class="text-center">PARTENAIRES</th>
            <th class="text-center">SITE WEB</th>
            <th class="text-center">LOGO</th>
            <th class="text-center">ACTIF</th>
            <th class="text-center">ACTIONS</th>
        </tr>
        </thead>
    </table>
    <table>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.name }}</td>
                <td>{{ partner.webUrl }}</td>
                <td>{{ partner.imageUrl }}</td>
                <td>{{ partner.active }}</td>
                <td>
                    <a href="{{ path('partner_show', { 'id': partner.id }) }}"><button type="button" value="VOIR L\'ARTICLE">VOIR DETAILS</button></a><br/><br/>

                    <a href="{{ path('partner_edit', { 'id': partner.id }) }}"><button type="button" value="MODIFIER">MODIFIER</button></a>
                </td>
            </tr>
        {% endfor %}
        <hr>
        </tbody>
    </table>

    <br/>
    <a href="{{ path('partner_new') }}"><button type="button" value="CREATION DE CONTENU">+</button></a>
</div>
{% endblock %}
