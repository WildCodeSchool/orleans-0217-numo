{% extends 'base.html.twig' %}

{% block body %}
    <h1>Adresses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Addr1</th>
                <th>Addr2</th>
                <th>Postalcode</th>
                <th>City</th>
                <th>Geolat</th>
                <th>Geolng</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td><a href="{{ path('adress_show', { 'id': adress.id }) }}">{{ adress.id }}</a></td>
                <td>{{ adress.addr1 }}</td>
                <td>{{ adress.addr2 }}</td>
                <td>{{ adress.postalCode }}</td>
                <td>{{ adress.city }}</td>
                <td>{{ adress.geoLat }}</td>
                <td>{{ adress.geoLng }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('adress_show', { 'id': adress.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('adress_edit', { 'id': adress.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adress_new') }}">Create a new adress</a>
        </li>
    </ul>
{% endblock %}
